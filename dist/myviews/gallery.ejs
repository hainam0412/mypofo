    <script>
      $(document).ready(function () {
        $(".gallery-control li").click(function () {
          const value = $(this).attr("data-filter");

          if (value == "all") {
            $(".gallery-item").show("1000");
            $(".current").text(`${$(".gallery-item").length}`);
          } else {
            $(".gallery-item")
              .not("." + value)
              .hide("1000");
            $(".gallery-item")
              .filter("." + value)
              .show("1000");

            var num = $(".gallery-item").filter("." + value).length;

            $(".current").text(num);
          }

          $(this).addClass("active").siblings().removeClass("active");
        });

        //Open modal

        $(".gallery-item .item-search").click(function () {
          const src = $(this).parent().find("img").attr("src");

          $(".gallery-modal").show("1000").addClass("show");
          $(".gallery-modal").append(`<img src="${src}" />`);
        });

        //close gallery-modal
        $(".cta .exit").click(function () {
          $(".gallery-modal").hide("1000").removeClass("show");
          $(".gallery-modal img").remove();
        });

        //zoom-in
        function scaleImageGallery() {
          let status = 1;
          let roll = 4;
          $(".zoom-in").click(function () {
            switch (status) {
              case 1:
                $(".gallery-modal img").css("transform", "scale(1.2) translate(-40%,-40%)");
                status = 2;
                roll = 2;
                break;

              case 2:
                $(".gallery-modal img").css("transform", "scale(1.5) translate(-30%,-30%)");
                status = 3;
                roll = 3;
                break;

              case 3:
                $(".gallery-modal img").css("transform", "scale(2) translate(-10%,-5%)");
                status = 4;
                roll = 4;
                break;

              default:
                break;
            }
          });

          $(".zoom-out").click(function () {
            switch (roll) {
              case 4:
                $(".gallery-modal img").css("transform", "scale(1.5) translate(-30%,-30%)");
                status = 3;
                roll = 3;
                break;

              case 3:
                $(".gallery-modal img").css("transform", "scale(1.2) translate(-40%,-40%)");
                status = 2;
                roll = 2;
                break;

              case 2:
                $(".gallery-modal img").css("transform", "scale(1) translate(-50%,-50%)");
                status = 1;
                roll = 1;
                break;

              default:
                break;
            }
          });
        }

        scaleImageGallery();
      });
    </script>
